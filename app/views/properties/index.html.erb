<table class="table table-bordered">
  <thead>
    <tr>
      <th>Post Code</th>
      <th>Cost</th>
      <th>Current Rent Cost</th>
      <th>Anual Income </th>
      <th>Anual Yield </th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
      	<td><%= property.location.postcode%></td>
        <td><%= property.cost %></td>
        <td><%= property.currentrent %></td>
        <td><%= property.anual_income%></td>
        <td><%= property.anual_yield%>%</td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

